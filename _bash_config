# Append to history, don't overwrite it!
shopt -s histappend

# Save multi-line commands as one command
shopt -s cmdhist

# Correct spelling errors in `cd`
shopt -s cdspell

# Suppress all posibilities when pressing TAB
shopt -s no_empty_cmd_completion

# Automatically prefix `directory names` with cd
#shopt -s autocd
